# ============================================================
# Data Processing Service - Environment Configuration
# ============================================================

# Database URLs - Separate databases for different purposes
# mqtt_collector_db: Temporary staging for MQTT messages (60 days retention)
# data_loggers_db: Permanent storage for battery & SCC logs (years of data)

MQTT_COLLECTOR_DATABASE_URL="postgresql://user:password@localhost:5432/mqtt_collector_db"
DATA_LOGGERS_DATABASE_URL="postgresql://user:password@localhost:5432/data_loggers_db"

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Processing Configuration
# Interval in milliseconds for polling pending messages
POLLING_INTERVAL_MS=5000

# Batch size for processing messages per cycle
BATCH_SIZE=100

# Max retry count before marking message as permanently failed
MAX_RETRY_COUNT=3
