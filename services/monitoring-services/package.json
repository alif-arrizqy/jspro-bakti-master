{
  "name": "monitoring-services",
  "version": "1.0.0",
  "description": "Site Down Monitoring Service for NMS Semeru integration",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "prisma:generate": "cross-env PRISMA_SCHEMA=prisma/monitoring-db/schema.prisma PRISMA_DATABASE_URL=$MONITORING_DATABASE_URL npx prisma generate --schema=prisma/monitoring-db/schema.prisma",
    "prisma:push": "cross-env PRISMA_SCHEMA=prisma/monitoring-db/schema.prisma PRISMA_DATABASE_URL=$MONITORING_DATABASE_URL npx prisma db push --schema=prisma/monitoring-db/schema.prisma",
    "prisma:migrate": "cross-env PRISMA_SCHEMA=prisma/monitoring-db/schema.prisma PRISMA_DATABASE_URL=$MONITORING_DATABASE_URL npx prisma migrate dev --schema=prisma/monitoring-db/schema.prisma",
    "prisma:deploy": "cross-env PRISMA_SCHEMA=prisma/monitoring-db/schema.prisma PRISMA_DATABASE_URL=$MONITORING_DATABASE_URL npx prisma migrate deploy --schema=prisma/monitoring-db/schema.prisma",
    "prisma:studio": "cross-env PRISMA_SCHEMA=prisma/monitoring-db/schema.prisma PRISMA_DATABASE_URL=$MONITORING_DATABASE_URL npx prisma studio --schema=prisma/monitoring-db/schema.prisma"
  },
  "keywords": [
    "monitoring",
    "site-down",
    "nms",
    "fastify",
    "prisma"
  ],
  "author": "alif-arrizqy",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "axios": "^1.7.9",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "prisma": "^7.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "inflight": "npm:@isaacs/inflight@^1.0.0",
    "rimraf": "^5.0.5",
    "glob": "^10.3.10",
    "fstream": "npm:@isaacs/fsstream@^1.0.0"
  }
}

