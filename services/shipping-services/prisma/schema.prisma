generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/shipping-client"
}

datasource db {
  provider = "postgresql"
}

enum Province {
  PAPUA_BARAT
  PAPUA_BARAT_DAYA
  PAPUA_SELATAN
  PAPUA
  MALUKU
  MALUKU_UTARA
}

enum ShippingStatus {
  REQUEST_GUDANG
  PROSES_KIRIM
  SELESAI
}

model Address {
  id              Int       @id @default(autoincrement())
  province        Province
  cluster         String?   @db.VarChar(50)
  address_shipping String   @db.Text
  created_at      DateTime  @default(now()) @db.Timestamptz(6)
  updated_at      DateTime  @default(now()) @updatedAt @db.Timestamptz(6)

  shipping_spare_part ShippingSparePart[]

  @@index([province], name: "idx_address_province")
  @@index([cluster], name: "idx_address_cluster")
  @@map("address")
}

model ProblemMaster {
  id           Int       @id @default(autoincrement())
  problem_name String    @db.VarChar(100)
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  updated_at   DateTime  @default(now()) @updatedAt @db.Timestamptz(6)

  shipping_spare_part ShippingSparePart[]

  @@index([problem_name], name: "idx_problem_master_problem_name")
  @@map("problem_master")
}

model ShippingSparePart {
  id              Int            @id @default(autoincrement())
  date            DateTime        @db.Date
  site_id         String          @db.VarChar(20)
  address_id      Int
  sparepart_note  String?         @db.Text
  problem_id      Int
  ticket_number   String?         @db.VarChar(50)
  ticket_image    String?         @db.Text
  status          ShippingStatus
  resi_number     String?         @db.VarChar(100)
  resi_image      String?         @db.Text
  created_at      DateTime        @default(now()) @db.Timestamptz(6)
  updated_at      DateTime        @default(now()) @updatedAt @db.Timestamptz(6)

  address Address       @relation(fields: [address_id], references: [id])
  problem ProblemMaster @relation(fields: [problem_id], references: [id])

  @@unique([site_id, date], name: "idx_sla_bakti_site_date")
  @@index([date], name: "idx_sla_bakti_date")
  @@index([site_id], name: "idx_sla_bakti_site_id")
  @@index([problem_id], name: "idx_sla_bakti_problem_id")
  @@map("shipping_spare_part")
}

model ReturSparePart {
  id                Int      @id @default(autoincrement())
  date              DateTime @db.Date
  shipper           String   @db.VarChar(50)
  source_spare_part String   @db.VarChar(100)
  list_spare_part   Json?    @db.JsonB
  image             Json?    @db.JsonB
  notes             String?  @db.Text
  created_at        DateTime @default(now()) @db.Timestamptz(6)
  updated_at        DateTime @default(now()) @updatedAt @db.Timestamptz(6)

  @@index([date], name: "idx_retur_spare_part_date")
  @@index([shipper], name: "idx_retur_spare_part_shipper")
  @@map("retur_spare_part")
}

